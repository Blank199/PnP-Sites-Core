{
  "title": "Provisioning Engine Template Apply Configuration",
  "description": "Defines the configuration to use when applying a template to a site",
  "version": "201910",
  "type": "object",
  "additionalProperties": false,
  "required": [],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "description": "The version number.",
      "type": "string",
      "enum": [
        "1.0"
      ]
    },
    "tenant": {
      "description": "define tenant settings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "DoNotWaitForSitesToBeFullyCreated": {
          "type": "boolean"
        }
      }
    },
    "contentTypes": {
      "description": "define content type settings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provisionContentTypesToSubWebs": {
          "type": "boolean"
        }
      }
    },
    "propertyBag": {
      "description": "define property bag settings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "overwriteSystemValues": {
          "description": "By default system settings will not be overwritten, even if specified in template. Specify true to overwrite them with the values from the template.",
          "type": "boolean"
        }
      }
    },
    "fields": {
      "description": "define field settings",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "provisionFieldsToSubWebs": {
          "description": "Specify true provisiong fields defined in the template to existing subwebs.",
          "type": "boolean"
        }
      }
    },
    "handlers": {
      "description": "set to define which handels to run. If not specified all handlers will be run",
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "AuditSettings",
          "ComposedLook",
          "CustomActions",
          "ExtensibilityProviders",
          "Features",
          "Fields",
          "Files",
          "Lists",
          "Pages",
          "Publishing",
          "RegionalSettings",
          "SearchSettings",
          "SitePolicy",
          "SupportedUILanguages",
          "Taxonomy",
          "Workflows",
          "SiteSecurity",
          "ContentTypes",
          "PropertyBagEntries",
          "WebSettings",
          "Navigation",
          "ImageRenditions",
          "ApplicationLifecycleManagement",
          "Tenant",
          "WebApiPermissions",
          "SiteHeader",
          "SiteFooter",
          "Theme",
          "SiteSettings"
        ]
      }
    },
    "lists": {
      "type": "object",
      "properties": {
        "ignoreDuplicateDataRowErrors": {
          "type": "boolean"
        }
      }
    },
    "parameters": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "string"
        }
      }
    },
    "navigation": {
      "type": "object",
      "properties": {
        "clearNavigation": {
          "type": "boolean"
        }
      }
    }
  }
}